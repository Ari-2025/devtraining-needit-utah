    <sysevent_in_email_action action="DELETE">
        <action>record_action</action>
        <active>true</active>
        <assignment_operator/>
        <condition_script>email.subject.toLowerCase().indexOf('overdue needit task')&gt;=0</condition_script>
        <description>Inbound email action</description>
        <event_name>email.read</event_name>
        <filter_condition/>
        <from/>
        <name>Update NeedIt Task on Reply</name>
        <order>100</order>
        <reply_email/>
        <required_roles/>
        <script><![CDATA[// Extract task number from subject
var taskNumMatch = email.subject.match(/(NITASK\d{6})/);
if (taskNumMatch) {
    var taskNum = taskNumMatch[1];

    // Find matching NeedIt task
    var task = new GlideRecord('x_58872_needit_needit_task');
    task.addQuery('number', taskNum);
    task.query();

    if (task.next()) {
        // Add email body as a comment
        task.comments = email.body_text;
        task.update();
        action.setRedirectURL(task); // Optional: links the email to the record
    }
}
]]></script>
